1_ sudo apt update && sudo apt upgrade -y
2_ sudo apt-get install jq unzip -y
3_ sudo apt install screen
4_ apt install git
5_ apt install cargo
6_ git clone https://github.com/aptos-labs/aptos-core.git
7_ cd aptos-core
8_ ./scripts/dev_setup.sh
9_ source ~/.cargo/env
10_ cargo install --git https://github.com/aptos-labs/aptos-core.git aptos --branch testnet
11_ git checkout --track origin/testnet
12_ export WORKSPACE=testnet
export USERNAME=XXXXXXXX
mkdir ~/$WORKSPACE
13_ aptos genesis generate-keys --output-dir ~/$WORKSPACE/keys
14_ sudo nano /root/testnet/keys/public-keys.yaml
15_ sudo nano /root/testnet/keys/private-keys.yaml
16_ sudo nano /root/testnet/keys/validator-identity.yaml
17_ sudo nano /root/testnet/keys/validator-full-node-identity.yaml
18_ aptos genesis set-validator-configuration \
    --local-repository-dir ~/$WORKSPACE \
    --username xxxxxxxxx \
    --owner-public-identity-file ~/$WORKSPACE/keys/public-keys.yaml \
    --validator-host 35.232.235.205:6180 \
    --full-node-host 34.135.169.144:6182 \
    --stake-amount 100000000000000

19_ sudo nano /root/testnet/xxxxxxx/operator.yaml

20_ sudo nano /root/testnet/xxxxxxx/owner.yaml

21_ aptos genesis generate-layout-template --output-file ~/$WORKSPACE/layout.yaml

22_ vi ~/$WORKSPACE/layout.yaml

