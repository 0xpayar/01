voting_power_increase_limit: 20


_ :w
_ :q
23_ cargo run --package framework -- release
cp head.mrb ~/$WORKSPACE/framework.mrb

24_ aptos genesis generate-genesis --local-repository-dir ~/$WORKSPACE --output-dir ~/$WORKSPACE

25_ mkdir ~/$WORKSPACE/config
cp docker/compose/aptos-node/validator.yaml ~/$WORKSPACE/validator.yaml
cp docker/compose/aptos-node/fullnode.yaml ~/$WORKSPACE/fullnode.yaml

26_ sudo nano /root/testnet/validator.yaml
